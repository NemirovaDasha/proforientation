<div class="proforientation-image">
  <img src="assets/img/index2.jpg" alt="Профориентация" class="proforientation-image__img">
</div>

<section class="proforientation main-wrapper" id="proforientation">
  {% include '../navigation/navigation.twig' %}
  <h2 class="title">Профориентация и&nbsp;тестирование</h2>
  <article class="proforientation__container wrapper">
    {% include '../prof-introduction/prof-introduction.twig' %}
    <div class="proforientation__info">
      {% for item in profItems %}
        <article class="proforientation__item">
          <img src="{{ item.image }}" class="proforientation__img">
          <div class="proforientation__item-container">
            <h3 class="proforientation__title">{{ item.title }}</h3>
            <ul class="proforientation__list">
              {% for  li in item.description %}
                <li class="proforientation__list-item">{{ li.title }}</li>
              {% endfor %}
            </ul>
          </div>
          <p class="proforientation__audience">Аудитория: {{ item.audience }}</p>
        </article>
      {% endfor %}
    </div>
  </article>
</section>